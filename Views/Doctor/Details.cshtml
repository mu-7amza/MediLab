@using UserManagment.Models
@model Appointment
@{
    ViewData["Title"] = "Edit Appointment";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/files/css/style.css" asp-append-version="true" />
</head>
<body>

    <div class="formbold-main-wrapper">
        <div class="formbold-form-wrapper">
            <h1>Appointment Details</h1>
            <hr />
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="formbold-mb-5">
                    <label asp-for="FullName" class="formbold-form-label"> Full Name </label>
                    <input type="text"
                           id="name"
                           asp-for="FullName"
                           placeholder="Full Name"
                           class="formbold-form-input" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="formbold-mb-5">
                    <label for="phone" class="formbold-form-label"> Phone Number </label>
                    <input type="text"
                           name="phone"
                           asp-for="Phone"
                           id="phone"
                           placeholder="Enter your phone number"
                           class="formbold-form-input" readonly />
                    <span asp-validation-for="Phone" class="text-danger"></span>

                </div>
                <div class="formbold-mb-5">
                    <label for="email" class="formbold-form-label"> Email Address </label>
                    <input type="email"
                           name="email"
                           asp-for="Email"
                           id="email"
                           placeholder="Enter your email"
                           class="formbold-form-input" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="flex flex-wrap formbold--mx-3">
                    <div class="w-full sm:w-half formbold-px-3">
                        <div class="formbold-mb-5 w-full">
                            <label for="date" class="formbold-form-label"> Date </label>
                            <input type="date"
                                   asp-for="Date"
                                   name="date"
                                   id="date"
                                   class="formbold-form-input" readonly />
                            <span asp-validation-for="Date" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="w-full sm:w-half formbold-px-3">
                        <div class="formbold-mb-5">
                            <label for="time" class="formbold-form-label"> Time </label>
                            <input type="time"
                                   name="time"
                                   asp-for="Time"
                                   id="time"
                                   class="formbold-form-input" readonly />
                            <span asp-validation-for="Time" class="text-danger"></span>

                        </div>
                    </div>
                </div>
               
                <div class="formbold-mb-5 formbold-pt-3">
                    <label class="formbold-form-label formbold-form-label-2">
                        Address Details
                    </label>
                    <div class="flex flex-wrap formbold--mx-3">
                        <div class="w-full sm:w-half formbold-px-3">
                            <div class="formbold-mb-5">
                                <input type="text"
                                       name="area"
                                       asp-for="Area"
                                       id="area"
                                       placeholder="Enter area"
                                       class="formbold-form-input" readonly />
                                <span asp-validation-for="Area" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="w-full sm:w-half formbold-px-3">
                            <div class="formbold-mb-5">
                                <input type="text"
                                       name="city"
                                       asp-for="City"
                                       id="city"
                                       placeholder="Enter city"
                                       class="formbold-form-input" readonly />
                                <span asp-validation-for="City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="w-full sm:w-half formbold-px-3">
                            <div class="formbold-mb-5">
                                <input type="text"
                                       name="state"
                                       asp-for="State"
                                       id="state"
                                       placeholder="Enter state"
                                       class="formbold-form-input" readonly />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>

                <div>
                    <a asp-action="Appointments" class="btn btn-primary text-light">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
